{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "preserve",
    "allowJs": false,
    "baseUrl": "src",
    "paths": {
      "@/components/*": [
        "components/*"
      ],
      "@/lib/*": [
        "lib/*"
      ],
      "@/hooks/*": [
        "hooks/*"
      ],
      "@/app/*": [
        "app/*"
      ],
      "@/styles/*": [
        "styles/*"
      ],
      "@elementalsouls/shared": [
        "../../shared/src/index.ts"
      ],
      "@elementalsouls/shared/*": [
        "../../shared/src/*"
      ]
    },
    "types": [
      "node",
      "@testing-library/jest-dom",
      "vitest"
    ],
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "incremental": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "src/**/*",
    "playwright.config.ts",
    "vitest.config.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
