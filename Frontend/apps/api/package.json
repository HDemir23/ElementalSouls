{
  "name": "@elementalsouls/api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsup src/index.ts --format esm --dts --sourcemap --clean --out-dir dist",
    "start": "node dist/index.js",
    "lint": "eslint \"src/**/*.ts\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "format": "prettier --write .",
    "prisma:generate": "prisma generate --schema=src/db/schema.prisma"
  },
  "dependencies": {
    "@elementalsouls/shared": "workspace:*",
    "@fastify/cors": "^8.5.0",
    "@fastify/helmet": "^13.0.2",
    "@fastify/rate-limit": "^8.0.0",
    "@fastify/sensible": "^5.0.1",
    "@prisma/client": "^5.12.1",
    "bullmq": "^4.12.0",
    "dotenv-safe": "^9.1.0",
    "fastify": "^4.26.2",
    "fastify-plugin": "^4.5.0",
    "fastify-raw-body": "^5.0.0",
    "ioredis": "^5.4.1",
    "nft.storage": "^7.1.1",
    "pino": "^8.19.0",
    "viem": "^2.9.15",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "pino-pretty": "^10.3.1",
    "prettier": "^3.2.5",
    "prisma": "^5.12.1",
    "supertest": "^7.0.0",
    "tsup": "^7.2.0",
    "tsx": "^4.7.1",
    "typescript": "^5.4.5",
    "vitest": "^1.5.0"
  }
}
